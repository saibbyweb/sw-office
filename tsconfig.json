{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 