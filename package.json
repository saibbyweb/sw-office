{
  "name": "electron-react-app",
  "version": "1.0.0",
  "description": "Electron React TypeScript App",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && vite build",
    "watch": "tsc -w",
    "dev": "vite build && tsc && electron ."
  },
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.electron.app",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron-vite": "^2.3.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "dependencies": {
    "electron": "^34.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
