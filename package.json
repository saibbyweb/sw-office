{
  "name": "electron-react-app",
  "version": "1.0.4",
  "description": "Electron React TypeScript App",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && vite build",
    "watch": "tsc -w",
    "dev": "vite build && tsc && electron .",
    "server-dev": "cd server && yarn run start:dev",
    "electron:build": "npm run build && electron-builder build --publish never",
    "electron:deploy": "npm run build && electron-builder build --publish always",
    "electron:build-install": "npm run electron:build && node scripts/install-app.js"
  },
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.saibbyweb.swoffice",
    "publish": [{
      "provider": "github",
      "owner": "saibbyweb",
      "repo": "sw-office"
    }],
    "productName": "SW Office",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  },
  "devDependencies": {
    "@types/node": "^22.13.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "dependencies": {
    "@apollo/client": "^3.12.11",
    "@types/node-fetch": "^2.6.12",
    "@types/styled-components": "^5.1.34",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.3.9",
    "framer-motion": "^12.4.2",
    "graphql": "^16.10.0",
    "node-fetch": "^2.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.15"
  }
}
